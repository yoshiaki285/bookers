<h1>Editing Book</h1>

<%= form_with model: @book do |f| %>
  <% if @book.errors.any? %>
    <div id = "error_explanation">
      <h2><%= @book.errors.count %>errors</h2>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
    
  <div class="field">
    <label for="book_title">Title</label>
    <%= f.text_field :title, class: "textfield" %>
  </div>
  
  <div class="field">
    <label fot="book_body">Body</label>
    <%= f.text_area :body, class: "textbody" %>
  </div>
  
  <div class="actions">
    <%= f.submit 'Update Book' %>
  </div>

<% end %>

<%= link_to "Show", book_path(@book.id) %>
